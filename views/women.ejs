<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/admindash.css">

</head>

<body>
    <div class="Container">
        <h1 class="logHead">Women Section </h1>

        <div class="counter">
            <div class="search-product">
                <input type="text" name="" id="search" placeholder="Search an item">
                <button class="search-button">search</button>
            </div>
            <div class="main-content">
                <div class="content-item">

                    <div class="titleofproduct">
                        <h1>Products</h1>

                    </div>
                    <div class="Adminproducts">

                        <% data.forEach(function(user){ %>

                            <div class="product">



                                <div class="imgview"><img src="data:image/jpeg;base64,<%=user.file.img%>"
                                        class="productimg" alt="">
                                </div>
                                <p class="producttitle">
                                    <%=user.title%>
                                </p>
                                <p>
                                    <%=user.price%>
                                </p>
                                <p>
                                    <%=user.moreinfo%>
                                </p>

                                <Button class="buy delete" onclick="func('<%=user.productNumber%>')">
                                    BUY

                                </Button>

                            </div>

                            <% }); %>

                    </div>




                </div>
                <center>

                    <h1 style="color:blue;font-size: 30px; margin-top: 250px;"> UPCOMING FEATURE</h1>
                </center>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>


    <script>




        var submitbtn = document.querySelectorAll(".buy");

        function func(a) {
            childNumber = parseInt(a) - 1;
            var img = submitbtn[childNumber].parentNode.childNodes[1].children[0].src;
            var titl = submitbtn[childNumber].parentNode.children[1].innerHTML;
            var pric = submitbtn[childNumber].parentNode.children[2].innerHTML;
            var inf = submitbtn[childNumber].parentNode.children[3].innerHTML
            if (localStorage.getItem("userlogin") == "true") {
                localStorage.setItem("image", img);
                localStorage.setItem("title", titl);
                localStorage.setItem("price", pric);
                localStorage.setItem("info", inf);
                window.location.href = "http://localhost:3000/BuyPage";
            } else {

                alert("Please ! login First");
                window.location.href = "http://localhost:3000/signin";

            }

        }

    </script>



</body>

</html>