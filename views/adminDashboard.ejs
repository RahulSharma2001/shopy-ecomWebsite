<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/admindash.css">

</head>

<body>
    <div class="Container">
        <h1 class="logHead">Welcome Admin</h1>
        <a href="http://localhost:3000/add-product"> <button class="Addbutton">New Product</button></a>

        <form action="/logout" method="post">
            <button class="back" type="submit">Logout</button>
        </form>
        <div class="counter">
            <form action="/adminSearch" method="post">
                <div class="search-product">
                    <input type="text" name="search" id="search" placeholder="Search an item">
                    <button class="search-button" type="submit">search</button>
                </div>
            </form>
            <div class="main-content">
                <div class="content-item">

                    <div class="titleofproduct">
                        <h1>Products</h1>

                    </div>
                    <div class="Adminproducts">

                        <% data.forEach(function(user){ %>
                            <form action="/delete" method="post">
                                <div class="product">

                                    <div class="imgview"><img src="data:image/jpeg;base64,<%=user.file.img%>"
                                            class="productimg" alt="">
                                    </div>
                                    <p class="producttitle">
                                        <%=user.title%>
                                    </p>
                                    <p>
                                        <%=user.price%>
                                    </p>
                                    <p>
                                        <%=user.moreinfo%>
                                    </p>

                                    <Button class="delete" type="submit" onclick="func()">
                                        Delete

                                    </Button>
                                    <input style="width:50px;  border-radius: 5px;" type="text" id="p"
                                        placeholder="P No." name="pNo">
                                    <p>
                                        <%=user.productNumber%>
                                    </p>
                                </div>

                                <% }); %>
                            </form>
                    </div>



                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>

    <script>

        var pN = document.getElementById('p');

        function func() {

            if ((pN.value).length == 0) {

                alert("Please Enter Product Number ");
                event.preventDefault();

            }


        }

    </script>

</body>

</html>